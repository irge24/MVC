{% extends 'base.html.twig' %}

{% block title %}Hello LibraryController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Lägg in bok i bibliotek</h1>

    <form action="{{ path('library_create') }}" method="POST">
        <input type="text" id="titel" name="titel" placeholder="Titel" required>
        <input type="text" id="ISBN" name="ISBN" placeholder="ISBN" required>
        <input type="text" id="författare" name="författare" placeholder="Författare" required>
        <input type="text" id="bild" name="bild" placeholder="Bild">
        <button type="submit">Skicka</button>
    </form>

    <pre id="output"></pre>
</div>

{% endblock %}
