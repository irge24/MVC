{% extends 'base.html.twig' %}

{% block title %}Hello LibraryController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Uppdatera bok</h1>

    <form action="{{ path('library_update_book', { id: book.id }) }}" method="POST">
        <label for="id">ID:</label>
        <input type="text" id="id" name="id" value="{{ book.id }}" readonly>

        <label for="titel">Titel:</label>
        <input type="text" id="titel" name="titel" value="{{ book.titel }}" required>

        <label for="ISBN">ISBN:</label>
        <input type="text" id="ISBN" name="ISBN" value="{{ book.ISBN }}" required>

        <label for="författare">Författare:</label>
        <input type="text" id="författare" name="författare" value="{{ book.författare }}" required>

        <label for="bild">Bild (länk):</label>
        <input type="text" id="bild" name="bild" value="{{ book.bild }}">

        <button type="submit">Spara ändringar</button>
    </form>


    <pre id="output"></pre>
</div>

{% endblock %}
