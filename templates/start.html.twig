{% extends "base.html.twig" %}

{% block title %}Play game{% endblock %}

{% block body %}
    <h1>Spela kortspel</h1>

    {# Visa vems tur det är #}
    {% if turn == 'player' %}
        <p><strong>Spelarens tur</strong></p>
    {% else %}
        <p><strong>Bankens tur</strong></p>
    {% endif %}

    <p><strong>{{ message }}</strong></p>

    {# Spelarens kort #}
    <h2>Spelarens kort:</h2>
    <ul>
        {% for card in player_cards %}
            <li>{{ card }}</li>
        {% endfor %}
    </ul>
    {% if player_total is defined %}
        <p>Spelarens poäng: {{ player_total }}</p>
    {% endif %}

    {# Bankens kort #}
    <h2>Bankens kort:</h2>
    <ul>
        {% for card in bank_cards %}
            <li>{{ card }}</li>
        {% endfor %}
    </ul>
    {% if bank_total is defined %}
        <p>Bankens poäng: {{ bank_total }}</p>
    {% endif %}

    <ul>
        <a href="{{ path('draw_card') }}">Ta kort</a>
        <a href="{{ path('stop') }}">Stanna</a>
        <a href="{{ path('new_game') }}">Nytt spel</a>
    </ul>

{% endblock %}